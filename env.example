# ============================================
# DATABASE CONFIGURATIE (SQLite)
# ============================================

# Database naam (zonder .db extensie, wordt automatisch toegevoegd)
# Database wordt opgeslagen in de data/ directory
DATABASE_NAME=IdentityPropagationDB

# ============================================
# AZURE AD CONFIGURATIE (Optioneel voor productie)
# ============================================

# Azure AD Tenant ID
# Vind je in Azure Portal > Azure Active Directory > Properties
AZURE_AD_TENANT_ID=12345678-1234-1234-1234-123456789012

# Azure AD App Registration Client ID
# Vind je in Azure Portal > App registrations > Your App > Overview
AZURE_AD_CLIENT_ID=87654321-4321-4321-4321-210987654321

# Azure AD Client Secret
# Vind je in Azure Portal > App registrations > Your App > Certificates & secrets
AZURE_AD_CLIENT_SECRET=your-client-secret-value-here

# Azure AD Authority URL (meestal automatisch, maar kan aangepast worden)
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/12345678-1234-1234-1234-123456789012

# ============================================
# APPLICATIE INSTELLINGEN
# ============================================

# Secret key voor JWT token signing (wijzig in productie!)
SECRET_KEY=development-secret-key-change-in-production-use-random-string

# Debug modus (true/false)
# true = gedetailleerde error messages
# false = productie modus
DEBUG=true

